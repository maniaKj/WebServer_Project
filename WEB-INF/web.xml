<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="true">
    
    <description>
      Servlet and JSP Examples.
    </description>
    <display-name>Servlet and JSP Examples</display-name>

    <servlet>
      <servlet-name>ChatSubmitServlet</servlet-name>
      <servlet-class>bbs.ChatSubmitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>ChatSubmitServlet</servlet-name>
      <url-pattern>/chatSubmitServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
      <servlet-name>ChatListServlet</servlet-name>
      <servlet-class>bbs.ChatListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>ChatListServlet</servlet-name>
      <url-pattern>/chatListServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
      <servlet-name>ChatGetServlet</servlet-name>
      <servlet-class>bbs.ChatGetServlet</servlet-class>
    </servlet>
    <servlet-mapping>
      <servlet-name>ChatGetServlet</servlet-name>
      <url-pattern>/chatGetServlet</url-pattern>
    </servlet-mapping>
</web-app>
